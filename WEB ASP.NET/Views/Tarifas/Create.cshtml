@model WEB_ASP.NET.Models.Tarifas

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Styles {
    <link rel=" stylesheet" href="~/css/tarifa.css">
}

<div class="page-container">
    <h1 class="page-title">Crear Tarifa</h1>
    <h4 class="page-subtitle">Nueva Tarifa</h4>

    <div class="form-container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre de la Tarifa</label>
                <input asp-for="Nombre" class="form-control" placeholder="Introduce el nombre de la tarifa" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Atributos" class="control-label">Atributos (separados por coma)</label>
                <input asp-for="Atributos" class="form-control" placeholder="Ejemplo: Wifi, Piscina, Parking" />
                <span asp-validation-for="Atributos" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Precio" class="control-label">Precio (€)</label>
                <input asp-for="Precio" class="form-control" placeholder="0.00" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="actions-container">
                <input type="submit" value="Crear Tarifa" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-back">Volver al Listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
