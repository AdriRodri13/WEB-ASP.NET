<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DataIA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/WEB_ASP.NET.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles",false)
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
</head>
<body>
    <header>
        <nav>
           <div class="contenedor-imagen-logo">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="https://placehold.co/150x150" /> </a>
           </div>
           <div class="contenedor-enlaces-header">                        
                <a class="boton-header" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                <a class="boton-header" asp-area="" asp-controller="Servicios" asp-action="Index">Servicios</a>
                <a class="boton-header" asp-area="" asp-controller="Tarifas" asp-action="Index">Tarifas</a>
                <a class="boton-header" asp-area="" asp-controller="Home" asp-action="Info">¿Quienes Somos?</a>
                <a class="boton-header" asp-area="" asp-controller="Home" asp-action="Contacto">Contacto</a>
           </div>
        </nav>
        <hr />
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="contenedor-footer">
            <!-- Enlaces sociales -->
            <ul class="footer-enlaces-sociales">
                <li>
                    <a href="#" class="footer-icono" aria-label="Twitter">
                        <i class="fa-brands fa-x-twitter"></i>
                    </a>
                </li>
                <li>
                    <a href="#" class="footer-icono" aria-label="Correo">
                        <i class="fa-regular fa-envelope"></i>
                    </a>
                </li>
                <li>
                    <a href="#" class="footer-icono" aria-label="LinkedIn">
                        <i class="fa-brands fa-linkedin"></i>
                    </a>
                </li>
            </ul>

            <!-- Copyright -->
            <div class="footer-copyright">
                &copy; 2024 - <strong>AdrianDeveloper</strong> - <a href="#" class="footer-link">Política de Privacidad</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
